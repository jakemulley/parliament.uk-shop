<div class="tiles" data-section-id="{{ section.id }}" data-section-type="tiles">

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'full-width-tile' %}
        <a href="{{ block.settings.full-width-tile-link }}" class="tile-container tile--full-width" style="background-image: url({{'hoc-hallway.png' | asset_url }});">
          <div class="tile--heading">
            <h3>{{ block.settings.full-width-tile-title }}</h3>
            <span class="tile--underline" role="presentation"></span>
          </div>
        </a>
      {% when 'half-width-tiles' %}
        <a href="{{ block.settings.left-half-width-tile-link }}" class="tile-container tile--half-width" style="background-image: url({{'hoc-products.png' | asset_url }});">
          <div class="tile--heading">{{ block.settings.left-half-width-tile-title }} <span class="tile--underline" role="presentation"></span>
          </div>
        </a>
        <a href="{{ block.settings.right-half-width-tile-link }}" class="tile-container tile--half-width" style="background-image: url({{'hol-products.png' | asset_url }});">
          <div class="tile--heading">{{ block.settings.right-half-width-tile-title }} <span class="tile--underline" role="presentation"></span></div>
        </a>
      {% when 'third-width-tiles' %}
        <a href="{{ block.settings.left-third-width-tile-link }}" class="tile-container tile--one-third" style="background-image: url({{'vfw-products.png' | asset_url }});">
          <div class="tile--heading">{{ block.settings.left-third-width-tile-title }}</div>
        </a>
        <a href="{{ block.settings.right-third-width-tile-link }}" class="tile-container tile--one-third" style="background-image: url({{'bb-products.png' | asset_url }});">
          <div class="tile--heading">{{ block.settings.center-third-width-tile-title }}</div>
        </a>
        <a href="{{ block.settings.center-third-width-tile-link }}" class="tile-container tile--one-third" style="background-image: url({{'tiles-products.png' | asset_url }});">
          <div class="tile--heading">{{ block.settings.right-third-width-tile-title }}</div>
        </a>
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Tiles",
    "blocks": [
      {
        "type": "full-width-tile",
        "name": "Full-width tile",
        "settings": [
          {
            "type": "text",
            "id": "full-width-tile-title",
            "label": "Full-width tile title"
          },
          {
            "type": "url",
            "id": "full-width-tile-link",
            "label": "Full-width tile link"
          }
        ]
      },
      {
        "type": "half-width-tiles",
        "name": "Half-width tiles",
        "settings": [
          {
            "type": "text",
            "id": "left-half-width-tile-title",
            "label": "Left half-width tile title"
          },
          {
            "type": "url",
            "id": "left-half-width-tile-link",
            "label": "Left half-width tile link"
          },
          {
            "type": "text",
            "id": "right-half-width-tile-title",
            "label": "Right half-width tile title"
          },
          {
            "type": "url",
            "id": "right-half-width-tile-link",
            "label": "Right half-width tile link"
          }
        ]
      },
      {
        "type": "third-width-tiles",
        "name": "Third-width tiles",
        "settings": [
          {
            "type": "text",
            "id": "left-third-width-tile-title",
            "label": "Left third-width tile title"
          },
          {
            "type": "url",
            "id": "left-third-width-tile-link",
            "label": "Left third-width tile link"
          },
          {
            "type": "text",
            "id": "center-third-width-tile-title",
            "label": "Center third-width tile title"
          },
          {
            "type": "url",
            "id": "center-third-width-tile-link",
            "label": "Center third-width tile link"
          },
          {
            "type": "text",
            "id": "right-third-width-tile-title",
            "label": "Right third-width tile title"
          },
          {
            "type": "url",
            "id": "right-third-width-tile-link",
            "label": "Right third-width tile link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Tiles",
        "category": "Tiles"
      }
    ]
  }
{% endschema %}
